
<img src="<%= user.avatar %>" alt="Profile Photo" width="100">

<form action="/user/profile/update-profile-ok/<%= user.id%>" enctype="multipart/form-data" method="POST">
    <input type="text" name="name" id="name" placeholder="Your Name" value="<%= locals.user.name %>" required>
    <input type="email" name="email" id="email" placeholder="Your E-mail" value="<%= locals.user.email %>" required>
    
    <input type="file" name="avatar" placeholder="Profile Pictuure">

    <input type="submit" value="Update">
</form>